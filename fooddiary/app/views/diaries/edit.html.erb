
<h1>다이어리 수정</h1>
 
<%= form_with(model: @diary, local: true) do |form| %>
 
  <% if @diary.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@diary.errors.count, "error") %> 에러
      </h2>
      <ul>
        <% @diary.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :음식이름 %><br>
    <%= form.text_field :foodname %>
  </p>
 
  <p>
    <%= form.label :음식사진 %><br>
    <%= form.text_area :image %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', diaries_path %>